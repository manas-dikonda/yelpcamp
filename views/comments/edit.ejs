<% include ../partials/header %>
<div class="container">
	
	<h1 style="text-align: center; margin: 20px 0">
		Edit comment
	</h1>
	<div style="width: 30%; margin: 25px auto">
		<form action="/campground/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST" >
			<div class="form-group">
				<label for="name">Text:</label>
				<input id="name" class="form-control" type = "text" name="comments[text]" value="<%= comment.text %>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block"type="submit">
					Update
				</button>
			</div>
		</form>

		<a href="/campground">Go Back</a>
	</div>	
</div>


<% include ../partials/footer %>