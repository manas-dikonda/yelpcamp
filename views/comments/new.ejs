<% include ../partials/header %>
<div class="container">
	
	<h1 style="text-align: center; margin: 20px 0">
		Add New Comment to <%= campgrounds.name %>
	</h1>
	<div style="width: 30%; margin: 25px auto">
		<form action="/campground/<%= campgrounds._id %>/comments" method="POST" >
			<div class="form-group">
				<label for="name">Text:</label>
				<input id="name" class="form-control" type = "text" name="comments[text]" placeholder="text">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block"type="submit">
					Add New Comment
				</button>
			</div>
		</form>

		<a href="/campground">Go Back</a>
	</div>	
</div>


<% include ../partials/footer %>