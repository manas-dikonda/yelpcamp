<% include ../partials/header %>
<div class="container">
	
	<h1 style="text-align: center; margin: 20px 0">
		Edit Campground 
	</h1>
	<div style="width: 30%; margin: 25px auto">
		<form action="/campground/<%= campground._id %>?_method=PUT" method="POST" >
			<div class="form-group">
				<label for="name">Name:</label>
				<input id="name" class="form-control" type = "text" name="campground[name]" value="<%= campground.name %>">
			</div>
			<div class="form-group">
				<label for="url">Enter the URL:</label>
				<input id="url" class="form-control" type = "text" name="campground[image]" value="<%= campground.image %>">
			</div>
			<div class="form-group">
				<label for="desc">Description:</label>
				<input id="desc" class="form-control" type = "text" name="campground[description]" value="<%= campground.description %>">
			</div>
			<div class="form-group">
				<label for="location">Location</label>
				<input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
			</div>
			<div class="form-group">
				<label for="cost">Cost</label>
			  <input class="form-control" type="number" name="campground[cost]" value="<%= campground.cost %>" step="0.01" min="0" required>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block"type="submit">
					Update
				</button>
			</div>
		</form>

		<a href="/campground/<%= campground._id %>">Go Back</a>
	</div>	
</div>


<% include ../partials/footer %>