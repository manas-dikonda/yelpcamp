<% include ../partials/header %>

<div class="container jumbotron">
	<div style="text-align: center">
		<h1 class="display-4">
			<i class="fas fa-campground"></i>Welcome to YelpCamp!
		</h1>
		<p class="lead">
			View our hand picked campgrounds from all over the world
		</p>
		<a class="btn btn-lg btn-primary animated slideInRight" href="/campground/new">Add New Campground</a>
	</div>
</div>

<div class="container">
	<div class="row">
		<% campgrounds.forEach(function(campground) { %>
		<div class="col-md-4 col-sm-6 col-lg-3">
			<div class="card mb-4">
				<img class="card-img-top" src="<%= campground.image %>">
				<div class="card-body" style="color: black">
					<h5 class="card-title text-center">
						<%= campground.name %>
					</h5>
					<a href="/campground/<%= campground._id %>" class="btn btn-primary btn-block">View</a>
				</div>
			</div>
		</div>
		<% }) %>
	</div>
</div>

<% include ../partials/footer %>
